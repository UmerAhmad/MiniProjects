<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing all necessities for fxml -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<!-- Main block in which everything is constructed, border pane, button work, text field, and label-->
<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotPotato.HotPotatoController">
   <center>
      <AnchorPane prefHeight="487.0" prefWidth="491.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="playerInput" onKeyPressed ="#displayFieldHandler" layoutX="64.0" layoutY="14.0" prefHeight="41.0" prefWidth="360.0" />
            <TextArea fx:id="playerList" layoutX="64.0" layoutY="62.0" prefHeight="295.0" prefWidth="362.0" />
            <Button layoutX="58.0" layoutY="357.0" mnemonicParsing="false" onAction="#buttonClickHandler" prefHeight="34.0" prefWidth="177.0" text="Remove Player" />
            <Button layoutX="249.0" layoutY="357.0" mnemonicParsing="false" onAction="#buttonClickHandler" prefHeight="34.0" prefWidth="177.0" text="Add Player" />
            <Button layoutX="133.0" layoutY="438.0" mnemonicParsing="false" onAction="#closeCurrentWindow" prefHeight="35.0" prefWidth="96.0" text="Quit" />
            <Button layoutX="246.0" layoutY="438.0" mnemonicParsing="false" onAction="#buttonClickHandler" prefHeight="35.0" prefWidth="96.0" text="Continue" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <Label text="Input Players Names" BorderPane.alignment="CENTER">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
   </top>
</BorderPane>
