<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing all necessities for fxml -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<!-- Main block in which everything is constructed, border pane, button work, text field, and label-->
<BorderPane prefHeight="558.0" prefWidth="572.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotPotato.EndScreenController">
   <center>
      <AnchorPane prefHeight="352.0" prefWidth="606.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="214.0" layoutY="346.0" mnemonicParsing="false" onAction="#closeCurrentWindow" prefHeight="76.0" prefWidth="144.0" text="Got it!" />
            <ImageView fitHeight="151.0" fitWidth="200.0" layoutX="59.0" layoutY="81.0">
               <image>
                  <Image url="image/medal.png" />
               </image>
            </ImageView>
            <Label fx:id="firstPlace" layoutX="70.0" prefHeight="81.0" prefWidth="377.0" text="#1 Spot!" />
            <TextArea fx:id="playerRankings" layoutX="317.0" layoutY="91.0" prefHeight="228.0" prefWidth="200.0" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <Label prefHeight="114.0" prefWidth="335.0" text="GAME OVER!" BorderPane.alignment="CENTER">
         <font>
            <Font size="55.0" />
         </font>
      </Label>
   </top>
</BorderPane>
