<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing all necessities for fxml -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<!-- Main block in which everything is constructed, border pane, grid, button work, text field, and label-->
<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monkeyGame.EndScreenController">
   <center>
      <Pane prefHeight="609.0" prefWidth="804.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="429.0" fitWidth="294.0" layoutX="496.0">
               <image>
                  <Image url="images/treetitle.png" />
               </image>
            </ImageView>
            <ImageView layoutX="553.0" layoutY="384.0">
               <image>
                  <Image url="images/asteroid.png" />
               </image>
            </ImageView>
            <Button layoutX="35.0" layoutY="501.0" mnemonicParsing="false" onAction="#closeCurrentWindow" prefHeight="65.0" prefWidth="152.0" text="Play Again" />
            <Button layoutX="319.0" layoutY="501.0" mnemonicParsing="false" onAction="#buttonClickHandler" prefHeight="65.0" prefWidth="152.0" text="Quit" />
            <Label layoutX="48.0" layoutY="42.0" prefHeight="53.0" prefWidth="348.0" text="GAME OVER">
               <font>
                  <Font name="System Bold" size="57.0" />
               </font>
            </Label>
            <Label layoutX="48.0" layoutY="192.0" prefHeight="85.0" prefWidth="110.0" text="Score :">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label layoutX="48.0" layoutY="327.0" prefHeight="82.0" prefWidth="302.0" text="Distance Travelled :">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label fx:id="scoreLabel" layoutX="179.0" layoutY="192.0" prefHeight="85.0" prefWidth="262.0" text="">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label fx:id="distanceLabel" layoutX="350.0" layoutY="326.0" prefHeight="85.0" prefWidth="262.0" text="">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </center>
</BorderPane>
